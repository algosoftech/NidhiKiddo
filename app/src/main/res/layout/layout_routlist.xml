<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#eeedf0"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"
        android:background="@drawable/routlistbg">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp">

            <TextView
                android:id="@+id/route1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/futurafont"
                android:text="Route 1"
                android:textColor="@color/darkblue"
                android:textSize="12dp"></TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/route1"
                android:src="@drawable/route3"></ImageView>

            <TextView
                android:id="@+id/address"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/route1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/futurafont"
                android:text="Sector 62"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/muli"
                android:text="6:00 PM"
                android:textColor="@color/gray"
                android:textSize="12dp"></TextView>

            <ImageView
                android:id="@+id/routedesigne"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@id/address"
                android:src="@drawable/routedesign"></ImageView>

        </RelativeLayout>

        <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/rel">


    <TextView
        android:id="@+id/adrreess2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"

        android:layout_marginLeft="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:fontFamily="@font/futurafont"
        android:text="Sector 62"
        android:textColor="@color/black"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/adrreess2"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/muli"
        android:text="6:00 AM"></TextView>

</RelativeLayout>

    </RelativeLayout>




</RelativeLayout>