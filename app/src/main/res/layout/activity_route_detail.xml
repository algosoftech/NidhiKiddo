<!--                        android:layout_marginBottom="750dp">-->


<!--                    </View>-->


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:text="211"
                        android:layout_weight="1"
                        android:textSize="19dp"></TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"

                        android:src="@drawable/route_bus"></ImageView>

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/futurafont"
                        android:text="Opreator  :"
                        android:textColor="@color/black"
                        android:textSize="17dp"></TextView>

                    <!--                    <View-->
                    <!--                        android:layout_width="1dp"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginLeft="60dp"-->
                    <!--                        android:layout_marginBottom="750dp">-->


                    <!--                    </View>-->


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="DTC"
                        android:layout_weight="1"
                        android:textSize="19dp"></TextView>


                </LinearLayout>


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="7dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/startend2"></ImageView>

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/futurafont"
                        android:text="From :"
                        android:textColor="@color/black"
                        android:textSize="17dp"></TextView>


                <!--                    <View-->
                <!--                        android:layout_width="1dp"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_marginLeft="60dp"-->
                <!--                        android:layout_marginBottom="750dp">-->


                <!--                    </View>-->


                    <TextView
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="1"
                        android:text="Mori Gate "
                        android:textSize="19dp"></TextView>


            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">





                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_weight="0.5"
                    android:text="To:"
                    android:layout_marginTop="-35dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/futurafont"
                    android:textSize="17dp"></TextView>






                    <!--                    <View-->
                    <!--                        android:layout_width="1dp"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginLeft="60dp"-->
                    <!--                        android:layout_marginBottom="750dp">-->


                    <!--                    </View>-->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginRight="50dp"
                    android:gravity="right"
                    android:text="Mayur Vihar"
                    android:textSize="19dp"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="7dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"

                        android:src="@drawable/route_bus"></ImageView>

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.5"

                        android:fontFamily="@font/futurafont"
                        android:text="Total Stops  :"
                        android:textColor="@color/black"
                        android:textSize="17dp"></TextView>

                    <!--                    <View-->
                    <!--                        android:layout_width="1dp"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginLeft="60dp"-->
                    <!--                        android:layout_marginBottom="750dp">-->


                    <!--                    </View>-->


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="10 "
                        android:layout_weight="1"
                        android:textSize="19dp"></TextView>


                </LinearLayout>



            </LinearLayout>





        </androidx.cardview.widget.CardView>
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@id/linear_matrix"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"

        android:background="@color/lightnlue"
        android:weightSum="3"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="left|center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/futurafont"
        android:text="S.No"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/futurafont"
            android:text="Stops At"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/futurafont"
            android:text="Timings"></TextView>
    </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerview"
        android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
        android:layoutAnimation="@anim/layout_animation"
        android:scrollbars="vertical"
        android:layout_marginTop="0dp">
    </androidx.recyclerview.widget.RecyclerView>




</LinearLayout>


